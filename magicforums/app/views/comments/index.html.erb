<div class="comment-index" data-id="<%=@post.id%>">
  <div class="comment">
  <div class="title-comment">
        <h1 class="h1-big">Comments</h1>
    </div>

    <div id="comments">
      <% @comments.each do |comment| %>
        <%= render partial: "comment",remote: true, locals: { comment: comment, post: @post, topic: @topic } %>
      <% end %>
    </div>

    <div id="comments-form-container">
      <%= render partial: "form", locals: { comment: @comment, post: @post, topic: @topic } %>
    </div>

  </div>
</div>
